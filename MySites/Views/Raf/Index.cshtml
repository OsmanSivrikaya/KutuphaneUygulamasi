    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.12.1/af-2.4.0/b-2.2.3/b-colvis-2.2.3/b-html5-2.2.3/b-print-2.2.3/cr-1.5.6/date-1.1.2/fc-4.1.0/fh-3.2.4/kt-2.7.0/r-2.3.0/rg-1.2.0/rr-1.2.8/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/sr-1.1.1/datatables.min.css" />
<style>
    table.dataTable > thead > tr {
        text-align: center;
        background-color: #17a2b8;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: white;
    }

    table.dataTable > tbody > tr {
        background-color: white;
    }

    table.dataTable.table-hover > tbody > tr:hover > * {
        background-color: white;
    }
</style>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<div id="app">
    <div class="form-floating mt-2 mb-3" style="font-size:14px;">
        <a href="#" class="btn btn-info" data-bs-toggle="modal" v-on:click="sifirla" data-bs-target="#RafModal">Raf Ekle</a>
    </div>

    <div class="modal fade" id="RafModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-bs-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Raf </h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-bs-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form v-on:submit.prevent="RafEkle">
                    <div class="modal-body" style="color:black !important;">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Kat :</label>
                            <select class="form-control" v-model="katId" v-on:change="OdaGetir" required>
                                <option v-for="veri in this.katlar" v-bind:value="veri.id">
                                    {{veri.katAdi}}
                                </option>
                            </select>
                        </div><!--Kat-->
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Oda :</label>
                            <select class="form-control" v-model="odaId" v-on:change="KitaplikGetir" required>
                                <option v-for="item in this.odalar" v-bind:value="item.id">
                                    {{item.odaAdi}}
                                </option>
                            </select>
                        </div><!--Oda-->
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Kitaplık :</label>
                            <select class="form-control" v-model="kitaplikId" required>
                                <option v-for="item in this.kitapliklar" v-bind:value="item.id">
                                    {{item.kitaplikAdi}}
                                </option>
                            </select>
                        </div><!--Kitaplik-->
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Adı:</label>
                            <input type="text" class="form-control" v-model="rafAdi" required>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover nowrap" cellspacing="0" style="position: relative; overflow: auto; width: 100%;" id="RafTable">
        <!--Tablo Id JS ile bağltanı kurmak için-->
        <thead>
            <tr>
                <th>❌</th>                            <!--0-->
                <th>✔</th>                             <!--1-->
                <th>Id</th>                             <!--2-->
                <th>Raf Adı</th>                        <!--3-->
                <th>KitaplikId</th>                     <!--4-->
                <th>Kitaplik Adı</th>                   <!--5-->
                <th>OdaId</th>                          <!--6-->
                <th>Oda Adı</th>                        <!--7-->
                <th>KatId</th>                          <!--8-->
                <th>Kat Adı</th>                        <!--9-->
                <th>Aktifmi</th>                        <!--10-->
            </tr>
        </thead>
    </table>
</div>
