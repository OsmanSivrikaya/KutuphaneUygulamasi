@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jszip-2.5.0/dt-1.12.1/af-2.4.0/b-2.2.3/b-colvis-2.2.3/b-html5-2.2.3/b-print-2.2.3/cr-1.5.6/date-1.1.2/fc-4.1.0/fh-3.2.4/kt-2.7.0/r-2.3.0/rg-1.2.0/rr-1.2.8/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/sr-1.1.1/datatables.min.css" />
<style>
    table.dataTable > thead > tr {
        text-align: center;
        background-color: #17a2b8;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: white;
    }

    table.dataTable > tbody > tr {
        background-color: white;
    }

    table.dataTable.table-hover > tbody > tr:hover > * {
        background-color: white;
    }
</style>
<div id="app">

    <div class="card card-info mt-3">
        <div class="card-header">
            <h3 class="card-title">Kategori Ekle</h3>
        </div>

        <div class="card-body">
            <form v-on:submit.prevent="KategoriEkle"> <!--kaydet butonuna basıldığında vue'nün içinde çalışacak metodu belirliyoruz-->
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Kategori Adı</label>
                            <input type="text" class="form-control" v-model="kategoriAdi" id="exampleInputEmail1" placeholder="Kategori Adı Giriniz" required>
                            <!--v-model : vue js in içindeki dataya input içindeki veriyi göndermek için kullanılır vue.js içinde ne tanımladıysan aynı isim olmak zorunda -->
                        </div>
                    </div>
                </div><!--KategoriAdı-->


                <div>
                    <button  type="submit" class="btn btn-primary float-right">Kaydet</button>
                </div>

            </form>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover nowrap" cellspacing="0" style="position: relative; overflow: auto; width: 100%;" id="KategoriTable"><!--Tablo Id JS ile bağltanı kurmak için-->
        <thead>
            <tr>
                <th>❌</th>                              <!--0-->
                <th>✔</th>                               <!--1-->
                <th>Id</th>                               <!--2-->
                <th>KategoriAdi</th>                      <!--3-->
                <th>Aktifmi</th>                          <!--4-->
               
                                        
            </tr>
        </thead>
    </table>
</div>
<script type="text/javascript" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
